<div class="top">
  <h2 class="top__title">フォロー</h2>
</div>

<div class="area">
  <% @users.each do |users| %>
    <div class="follow-user">
        <div class="follow-user__left">
          <%= attachment_image_tag users, :profile_image, fallback: "no_image.jpg", class:"follow-user__img", size:"10x10" %>
        </div>
        <div class="follow-user__center">
          <span>
            <%= link_to user_path(users), class:"follow-user__name" do %>
              <%= users.name %>
            <% end %>
          </span>
        </div>
        <div class="follow-user__right">
          <span>
          <% if users != current_user %>
            <% if users.is_followed_by?(current_user) %>
              <%=link_to user_relationship_path(users), method: :delete do %>
                <button type="button" class="follow-user__btn-red">フォロー解除</button>
              <% end %>
            <% else %>
              <%=link_to user_relationships_path(users), method: :post do %>
                <button type="button" class="follow-user__btn-blue">フォロー</button>
              <% end %>
            <% end %>
          <% end %>
          </span>
        </div>
    </div>
  <% end %>
</div>