<% if users != current_user %>
  <% if users.is_followed_by?(current_user) %>
    <%=link_to user_relationship_path(users), method: :delete, remote: true do %>
      <button type="button" class="follow-user__btn-red">フォロー解除</button>
    <% end %>
  <% else %>
    <%=link_to user_relationships_path(users), method: :post, remote: true do %>
      <button type="button" class="follow-user__btn-blue">フォロー</button>
    <% end %>
  <% end %>
<% end %>