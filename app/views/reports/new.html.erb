<div class="top">
  <h2 class="top__title">新規投稿</h2>
</div>

<%= form_with model:@report, local:true do |report| %>
<div class="area">
  <div class="edit">
    <div class="edit__item">
      <label class="edit__label">タイトル(必須）</label>
      <%= report.text_field :title, class: "edit__text" %>
    </div>

    <div class="edit__item">
      <label class="edit__label">投稿画像</label>
      <%= report.attachment_field :report_image, class: "edit__text" %>
    </div>

    <div class="edit__item">
      <label class="edit__label">本文（必須）</label>
      <div><%= report.text_area :body, class: "edit__body", wrap:"hard" %></div>
    </div>

    <div class="edit__item">
      <%= report.submit '投稿', class:"edit__btn" %>
    </div>
  </div>
</div>
<% end %>