<div>
  <div>
    <h1>お問い合わせ</h1>
  </div>
  
  <%= form_with model: @inquiry, url: inquiry_thanks_path, local: true do |inquiry| %>
    <table>
      <tr>
        <th>名前</th>
        <td>
          <%= inquiry.hidden_field :name %>
          <%= @inquiry.name %>
        </td>
      </tr>
      
      <tr>
        <th>メールアドレス</th>
        <td>
          <%= inquiry.hidden_field :email %>
          <%= @inquiry.email %>
        </td>
      </tr>
      
      <tr>
        <th>お問い合わせ内容</th>
        <td>
          <%= inquiry.hidden_field :message %>
          <%= simple_format(@inquiry.message) %>
        </td>
      </tr>
    </table>
    <%= inquiry.submit '送信', class: '' %>
  <% end %>
  
</div>
